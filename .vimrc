syntax on
color dracula

" Enable line numbers
set number

" Highlight current line
set cursorline

" Enable mouse in all modes
set mouse=a

" Copy indent from last line when starting new line
set autoindent

" Move cursor to next/prev line
set whichwrap+=<,>,h,l,[,]

" backspace over everything in insert mode
set backspace=indent,eol,start
